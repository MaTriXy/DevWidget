<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/configure_activity"
    tools:context=".configure.ConfigureActivity">

  <android.support.constraint.Guideline
      android:id="@+id/keyline_start"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_begin="@dimen/keyline_1"/>

  <android.support.constraint.Guideline
      android:id="@+id/keyline_end"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_end="@dimen/keyline_1"/>

  <EditText
      android:id="@+id/configureWidgetName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="textAutoCorrect"
      android:hint="@string/configure_hint_widget_name"
      app:layout_constraintStart_toStartOf="@id/keyline_start"
      app:layout_constraintEnd_toEndOf="@id/keyline_end"/>

  <AutoCompleteTextView
      android:id="@+id/configurePackageName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/half_gap"
      android:inputType="textUri"
      android:hint="@string/configure_hint_package_matcher"
      app:layout_constraintStart_toStartOf="@id/keyline_start"
      app:layout_constraintEnd_toEndOf="@id/keyline_end"
      app:layout_constraintTop_toBottomOf="@id/configureWidgetName" />
</android.support.constraint.ConstraintLayout>
